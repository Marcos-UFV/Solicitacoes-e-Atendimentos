<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/SOLICITA_gray"
    android:gravity="center"
    android:padding="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/historyFooterBttn"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:onClick="openHistoryActivity"
        android:layout_marginEnd="65dp"
        app:backgroundTint="@color/SOLICITA_blue"
        app:cornerRadius="15dp"
        app:icon="@drawable/history_icon"
        app:iconSize="30dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homeFooterBttn"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:onClick="openHomeActivity"
        android:layout_marginEnd="65dp"
        app:backgroundTint="@color/SOLICITA_blue"
        app:cornerRadius="15dp"
        app:icon="@drawable/home_icon"
        app:iconSize="30dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newRequestFooterBttn"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:onClick="openRequestActivity"
        app:backgroundTint="@color/SOLICITA_blue"
        app:cornerRadius="15dp"
        app:icon="@drawable/new_request_icon"
        app:iconSize="30dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"/>
</LinearLayout>
